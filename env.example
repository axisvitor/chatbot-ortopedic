# OpenAI Configuration
OPENAI_API_KEY=sk-xxx # Sua chave da API OpenAI
ASSISTANT_ID=asst-xxx # ID do seu assistente OpenAI

# Groq Configuration
GROQ_API_KEY=gsk-xxx # Sua chave da API Groq

# Redis Configuration
REDIS_HOST=redis-xxx.railway.app # Host do Redis
REDIS_PORT=6379 # Porta do Redis (padrão: 6379)
REDIS_PASSWORD=xxx # Senha do Redis
REDIS_TLS=true # Use TLS para conexão (recomendado em produção)

# WhatsApp Configuration
WAPI_URL=https://xxx.api.whatsapp.com # URL base da API do WhatsApp
WAPI_TOKEN=xxx # Token de autenticação do WhatsApp
WAPI_CONNECTION_KEY=xxx # Chave de conexão do WhatsApp
FINANCIAL_DEPT_NUMBER=5511999999999 # Número do WhatsApp do departamento financeiro

# Business Hours Configuration
BUSINESS_HOURS_START=09:00 # Horário de início do atendimento
BUSINESS_HOURS_END=18:00 # Horário de fim do atendimento
BUSINESS_DAYS=1,2,3,4,5 # Dias úteis (1=Segunda, 7=Domingo)
TIMEZONE=America/Sao_Paulo # Fuso horário

# Server Configuration
NODE_ENV=production # Ambiente (development/production)
PORT=8080 # Porta do servidor
LOG_LEVEL=info # Nível de log (debug/info/warn/error)
